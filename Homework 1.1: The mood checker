mood = "happy"

if mood == "happy":
    print("It is great to see you happy!")
elif mood == "nervous":
    print("Take a deep breath 3 times.")
elif mood == "sad":
    print("It is okay to cry.")
elif mood == "excited":
    print("I can see you jumping up and down.")
elif mood == "relaxed":
    print("You look relaxed.")
else:
    print("I don't recognize this mood.")
